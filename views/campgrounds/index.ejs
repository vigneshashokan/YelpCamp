<% include ../partials/header %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>Check out the places where I have hiked/camped!</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add a new Campground</a>
            </p>
        </div>
    </header>
    <div class="row">
        <div class="col-lg-12">
            <p>My most recent hikes</p>
        </div>
    </div>
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(camp){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= camp["image"] %>"></img>
                    <div class="caption">
                        <h4><%= camp["name"] %></h4>
                    </div>
                    <p><a class="btn btn-primary" href="/campgrounds/<%= camp._id %>">More Info</a></p>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<% include ../partials/footer %>
